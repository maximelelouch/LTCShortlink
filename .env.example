# URL de base de l'application (sans barre oblique finale)
NEXTAUTH_URL=http://localhost:3000

# Clé secrète pour les sessions et les JWT
# Générez une chaîne aléatoire sécurisée (ex: `openssl rand -base64 32` ou `npx uuid`)
NEXTAUTH_SECRET=your-secure-secret-key-here

# URL pour l'API interne (peut être la même que NEXTAUTH_URL en développement)
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# Clé secrète pour le hachage (utilisée par bcrypt)
HASH_SECRET=your-hash-secret-key-here

# URL de la base de données PostgreSQL
DATABASE_URL=postgresql://neondb_owner:npg_F4ftBsOqY0Ek@ep-proud-fog-adb09wmx-pooler.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# Configuration de l'email (pour la réinitialisation du mot de passe, etc.)
# Exemple avec SendGrid (optionnel)
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@example.com

# Configuration OAuth (optionnel - pour la connexion avec Google, GitHub, etc.)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_ID=your-github-id
# GITHUB_SECRET=your-github-secret

# Configuration des cookies (optionnel)
# NEXTAUTH_COOKIE_DOMAIN=.votredomaine.com  # Pour les sous-domaines
# NEXTAUTH_COOKIE_SECURE=true  # Uniquement en HTTPS en production
# NEXTAUTH_COOKIE_PATH=/
# NEXTAUTH_COOKIE_HTTPONLY=true
# NEXTAUTH_COOKIE_SAME_SITE=lax

# Configuration du taux de limitation (rate limiting)
# (en requêtes par fenêtre de temps)
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des sessions
SESSION_MAX_AGE=604800  # 7 jours en secondes
SESSION_UPDATE_AGE=86400  # 1 jour en secondes
JWT_SECRET=your-jwt-secret-key-here
JWT_SIGNING_PRIVATE_KEY=your-jwt-private-key-here
JWT_ENCRYPTION_KEY=your-jwt-encryption-key-here

# Configuration du cache (optionnel)
# REDIS_URL=redis://localhost:6379

# Configuration pour le développement
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Désactiver la vérification d'email en développement
NEXT_PUBLIC_DISABLE_EMAIL_VERIFICATION=true

# Configuration pour la production
# NODE_ENV=production
# NEXT_PUBLIC_APP_ENV=production
# NEXT_PUBLIC_BASE_URL=https://votredomaine.com
# NEXTAUTH_URL=https://votredomaine.com
# NEXTAUTH_URL_INTERNAL=https://api.votredomaine.com
# NEXTAUTH_COOKIE_DOMAIN=.votredomaine.com
# NEXTAUTH_COOKIE_SECURE=true
# NEXT_PUBLIC_DISABLE_EMAIL_VERIFICATION=false

# Configuration des métadonnées de l'application
NEXT_PUBLIC_APP_NAME=ShortLink
NEXT_PUBLIC_APP_DESCRIPTION=Un service de raccourcissement d'URL simple et efficace
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Configuration des analyses (optionnel)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Configuration du mode maintenance (optionnel)
# MAINTENANCE_MODE=false
# MAINTENANCE_MESSAGE=Le site est actuellement en maintenance. Veuillez réessayer plus tard.
